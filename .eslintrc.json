{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true,
        "react-native/react-native": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "settings": {
        "react": {
          "version": "detect"
        }
    },
    "rules": {
        "react/prop-types": "off",
        "react/display-name": "off"
    }
}
